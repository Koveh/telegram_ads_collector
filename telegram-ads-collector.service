[Unit]
Description=Telegram Ads Statistics Collector
After=network.target postgresql.service

[Service]
Type=oneshot
User=root
Group=root
WorkingDirectory=/root/automation/telegramAdsCollector
Environment=PYTHONPATH=/root/automation/telegramAdsCollector
Environment=PATH=/root/automation/telegramAdsCollector/venv/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStart=/usr/bin/python3 /root/automation/telegramAdsCollector/collect_stats.py
StandardOutput=append:/var/log/telegram_ads_collector.log
StandardError=append:/var/log/telegram_ads_collector.log

[Install]
WantedBy=multi-user.target
